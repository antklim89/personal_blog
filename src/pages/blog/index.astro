---
import Layout from '@/components/Layout.astro';
import BlogGrid from '@/components/BlogGrid.astro';
import BlogCard from '@/components/BlogCard.astro';
import { loadBlogs } from '@/content-loaders/blog';
import Pagination from '@/components/ui/Pagination.astro';
import { BLOGS_PER_PAGE } from '@/consts';

const { blogs, totalPages } = await loadBlogs({ limit: BLOGS_PER_PAGE });
---

<Layout title="About Me" description="Lorem ipsum dolor sit amet" image="/images/blog-placeholder-about.jpg">
  <Pagination page={1} totalPages={totalPages} />
  <BlogGrid>
    {blogs.map((blog) => <BlogCard blog={blog} />)}
  </BlogGrid>
  <Pagination page={1} totalPages={totalPages} />
</Layout>

<style lang="scss">
  section {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
</style>
