---
import HeaderLink from '@/components/ui/HeaderLink.astro';
import ThemeToggleButton from '@/components/ui/ThemeToggleButton.astro';
import { SITE_TITLE } from '@/consts';
import Social from './Social.astro';
---

<header>
  <div class="container">
    <h2>
      <a href="/">
        {SITE_TITLE}
      </a>
    </h2>
    <nav>
      <ul>
        <li>
          <HeaderLink href="/blog">Blog</HeaderLink>
        </li>
        <li>
          <HeaderLink href="/contacts">Contacts</HeaderLink>
        </li>
        <li>
          <HeaderLink href="/about">About</HeaderLink>
        </li>
      </ul>
      <Social />
      <ThemeToggleButton />
    </nav>
  </div>
</header>

<style lang="scss">
  header {
    background: var(--bg-dark);
    box-shadow: 0 2px 8px rgba(black, 5%);
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  @media (max-width: 640px) {
    .container {
      flex-direction: column;
      align-items: center;
    }
  }

  h2 {
    margin: 0;

    a {
      text-decoration: none;
      font-size: 2rem;
      text-wrap: nowrap;
      color: var(--text);
    }
  }

  nav {
    display: flex;
    align-items: center;
    gap: 1.25rem;

    ul {
      display: flex;
      align-items: center;
      gap: 0.125rem;
      padding: 0;
    }

    li {
      list-style: none;
    }

    a {
      color: var(--text);
      text-transform: uppercase;
    }
  }
</style>
